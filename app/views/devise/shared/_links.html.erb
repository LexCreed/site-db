<div class="btn-lg col-xs-12 " >
  <div class=" col-xs-12 col-sm-6 " >          
    <%- if controller_name != 'sessions' %>
      <%= link_to "Tengo una cuenta", new_session_path(resource_name), class:"btn btn-block  btn-login col-xs-6" %>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Olvide mi contraseÃ±a", new_password_path(resource_name), class:"btn btn-login btn-block col-xs-6" %>
    <% end -%>
  </div>

  <div class=" col-xs-12 col-sm-6 " >
    <br class="visible-xs">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Crear Cuenta", new_registration_path(resource_name), class:"btn  btn-login btn-block  col-xs-6" %>
    <% end -%>  
  </div>
</div>

<div class="btn-lg col-xs-12 " >
  <%- if devise_mapping.omniauthable? %>

  <div class=" col-xs-6 " > 
      <%= link_to "Facebook", user_omniauth_authorize_path(:facebook), class:"btn btn-block btn-social btn-facebook" %>
  </div> 

  <div class=" col-xs-6 " > 
      <%= link_to "Twitter", user_omniauth_authorize_path(:twitter), class:"btn btn-block btn-social btn-twitter" %> 
    
  </div>

  <% end -%>
</div>





<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

