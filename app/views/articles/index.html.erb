<div class="container-fluid">    
<h1> Articulos</h1>
    <div class="row">
        <% @articles.each do |article| %>
            <div class="col-md-4 top-space">
                <div class="box relative article-height">
                    <div class="absolute article-height background-cover" style="background:url(<%= article.cover.url(:thumb) %>);top:0px;left:0px;width:100%;">
                    </div>
                        <div class="absolute article-height background-cover" style="background:rgba(0,0,0,0.6);top:0px;left:0px;width:100%;">
                    </div>
                    
                    <div class="relative white text-center">
                        <h2><%= link_to article.title, article %></h2>
                        <p>
                            <%= truncate(article.body,length:60) %> 
                        </p>
                    </div>
                </div>
                
            </div>
        <%end%>   
    </div>
    <div class="top-space text-center">
        <%= will_paginate @articles %> 
    </div>
</div>
